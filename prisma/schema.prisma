generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String        @id @default(cuid())
  name          String?
  email         String        @unique
  emailVerified DateTime?     @map("email_verified")
  password      String?
  createdAt     DateTime      @default(now()) @map("created_at")
  updatedAt     DateTime      @updatedAt @map("updated_at")
  image         String?
  accounts      Account[]
  Appointment   Appointment[]
  attendances   Attendance[]
  sessions      Session[]
  sentNotifications     Notification[] @relation("NotificationSender")
  receivedNotifications Notification[] @relation("NotificationRecipient")

  @@map("users")
}

model Patient {
  id             String          @id @default(cuid())
  name           String?
  phone          String
  email          String?
  birthDate      DateTime?       @map("birth_date")
  notes          String?
  createdAt      DateTime        @default(now()) @map("created_at")
  updatedAt      DateTime        @updatedAt @map("updated_at")
  cep            String?
  city           String?
  companyName    String?         @map("company_name")
  complement     String?
  country        String?
  cpf            String?
  gender         String?
  maritalStatus  String?         @map("marital_status")
  neighborhood   String?
  number         String?
  profession     String?
  rg             String?
  state          String?
  street         String?
  appointments   Appointment[]
  attendances    Attendance[]
  treatmentPlans TreatmentPlan[]

  @@map("patients")
}

model Appointment {
  id             String   @id @default(cuid())
  name           String
  phone          String
  date           DateTime
  status         Status   @default(CONFIRMED)
  professionalId String   @map("professional_id")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")
  patientId      String?  @map("patient_id")
  notes          String?
  patient        Patient? @relation(fields: [patientId], references: [id])
  User           User     @relation(fields: [professionalId], references: [id])

  @@map("appointments")
}

model Attendance {
  id                    String         @id @default(cuid())
  type                  AttendanceType @default(EVALUATION)
  date                  DateTime
  patientId             String         @map("patient_id")
  professionalId        String         @map("professional_id")
  mainComplaint         String?        @map("main_complaint")
  currentIllnessHistory String?        @map("current_illness_history")
  pastMedicalHistory    String?        @map("past_medical_history")
  familyHistory         String?        @map("family_history")
  observations          String?
  createdAt             DateTime       @default(now()) @map("created_at")
  updatedAt             DateTime       @updatedAt @map("updated_at")
  cidCode               String?        @map("cid_code")
  cidDescription        String?        @map("cid_description")
  evolutionNotes        String?        @map("evolution_notes")
  attachments           Json?
  cifCode               String?        @map("cif_code")
  cifDescription        String?        @map("cif_description")
  launchToFinance       Boolean        @default(false) @map("launch_to_finance")
  financeAmount         Decimal?       @map("finance_amount")
  financePaymentMethod  PaymentMethod? @map("finance_payment_method")
  financeAccount        String?        @map("finance_account")
  financePaid           Boolean        @default(false) @map("finance_paid")
  financePaidAt         DateTime?      @map("finance_paid_at")
  patient               Patient        @relation(fields: [patientId], references: [id])
  professional          User           @relation(fields: [professionalId], references: [id])
  treatmentPlan         TreatmentPlan?

  @@map("attendances")
}

model TreatmentPlan {
  id              String     @id @default(cuid())
  patientId       String     @map("patient_id")
  procedure       String
  sessionQuantity Int        @map("session_quantity")
  resource        String?
  conducts        String?
  objectives      String?
  prognosis       String?
  createdAt       DateTime   @default(now()) @map("created_at")
  updatedAt       DateTime   @updatedAt @map("updated_at")
  attendanceId    String     @unique @map("attendance_id")
  attendance      Attendance @relation(fields: [attendanceId], references: [id])
  patient         Patient    @relation(fields: [patientId], references: [id])

  @@map("treatment_plans")
}

model Transaction {
  id             String              @id @default(cuid())
  description    String
  amount         Decimal
  account        String?             @map("account")
  category       TransactionCategory @map("category")
  paymentMethod  PaymentMethod?      @map("payment_method")
  status         TransactionStatus   @default(PENDING) @map("status")
  source         TransactionSource   @map("source")
  referenceId    String?             @map("reference_id")
  attendanceType AttendanceType?     @map("attendance_type")
  dueDate        DateTime?           @map("due_date")
  competenceDate DateTime?           @map("competence_date")
  paidAt         DateTime?           @map("paid_at")
  notes          String?             @map("notes")
  createdAt      DateTime            @default(now()) @map("created_at")
  updatedAt      DateTime            @updatedAt @map("updated_at")

  @@map("transactions")
}

model Account {
  userId            String   @map("user_id")
  type              String
  provider          String
  providerAccountId String   @map("provider_account_id")
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
  @@map("verification_tokens")
}

model Notification {
  id           String                 @id @default(cuid())
  title        String
  message      String
  category     NotificationCategory   @default(MESSAGE)
  status       NotificationStatus     @default(UNREAD)
  priority     NotificationPriority   @default(NORMAL)
  channel      String?
  highlight    Boolean                @default(false)
  includeEmail Boolean                @default(false) @map("include_email")
  sendMode     NotificationSendMode   @default(NOW) @map("send_mode")
  scheduledFor DateTime?              @map("scheduled_for")
  sentAt       DateTime?              @map("sent_at")
  readAt       DateTime?              @map("read_at")
  recipientId  String                 @map("recipient_id")
  recipient    User                   @relation("NotificationRecipient", fields: [recipientId], references: [id])
  senderId     String?                @map("sender_id")
  sender       User?                  @relation("NotificationSender", fields: [senderId], references: [id])
  createdAt    DateTime               @default(now()) @map("created_at")
  updatedAt    DateTime               @updatedAt @map("updated_at")

  @@map("notifications")
}

enum Status {
  CONFIRMED   @map("confirmed")
  CANCELED    @map("canceled")
  WAITING     @map("waiting")
  RESCHEDULED @map("rescheduled")
}

enum PaymentMethod {
  PIX         @map("pix")
  BANK_SLIP   @map("bank_slip")
  CREDIT_CARD @map("credit_card")
}

enum TransactionCategory {
  ATTENDANCE @map("attendance")
  DEPOSIT    @map("deposit")
}

enum TransactionStatus {
  PENDING @map("pending")
  PAID    @map("paid")
}

enum TransactionSource {
  ATTENDANCE @map("attendance")
  MANUAL     @map("manual")
}

enum AttendanceType {
  EVALUATION @map("evaluation")
  EVOLUTION  @map("evolution")
}

enum NotificationCategory {
  SYSTEM     @map("system")
  FINANCE    @map("finance")
  ATTENDANCE @map("attendance")
  MESSAGE    @map("message")
}

enum NotificationStatus {
  UNREAD @map("unread")
  READ   @map("read")
}

enum NotificationPriority {
  LOW    @map("low")
  NORMAL @map("normal")
  HIGH   @map("high")
}

enum NotificationSendMode {
  NOW       @map("now")
  SCHEDULED @map("scheduled")
}
